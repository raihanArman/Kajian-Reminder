<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="kajian"
            type="id.co.kajianpro.data.model.Kajian" />
        <variable
            name="tanggal"
            type="String" />
        <variable
            name="jam"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:fadingEdgeLength="10dp"
        android:outlineSpotShadowColor="@color/teal_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_kajian"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="120dp" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{kajian.namaKajian}"
                    android:fontFamily="@font/sofia_pro_medium_az"
                    android:textColor="@color/teal_200"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{kajian.namaKategori}"
                    android:textSize="12sp"
                    android:textColor="@color/third"
                    android:fontFamily="@font/sofia_pro_regular_az"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_baseline_calendar_today_24"
                        android:tint="@color/purple_500"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{tanggal}"
                        android:fontFamily="@font/sofia_pro_regular_az"
                        android:textColor="@color/teal_200"
                        android:textSize="11sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_baseline_access_time_24"
                        android:tint="@color/purple_500"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{jam}"
                        android:fontFamily="@font/sofia_pro_regular_az"
                        android:textColor="@color/teal_200"
                        android:textSize="11sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:tint="@color/purple_500"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{kajian.tempat}"
                        android:fontFamily="@font/sofia_pro_regular_az"
                        android:textColor="@color/teal_200"
                        android:textSize="11sp"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/bt_iniciar_sesion"
                    android:layout_marginRight="10dp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:elevation="8dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true"
                    app:pressedTranslationZ="12dp"
                    app:useCompatPadding="true"
                    app:backgroundTint="@color/purple_500">
                    <LinearLayout
                        android:id="@+id/lv_matikan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#E91E2F"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_baseline_power_settings_new_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matikan"
                            android:layout_marginLeft="10dp"
                            android:textSize="8sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/sofia_pro_regular_az"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>