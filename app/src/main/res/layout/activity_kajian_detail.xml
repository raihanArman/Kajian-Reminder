<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="kajian"
            type="id.co.kajianpro.data.model.Kajian" />
        <variable
            name="tanggal"
            type="String" />
        <variable
            name="jam"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.KajianDetailActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_kajian"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{kajian.namaKajian}"
            android:textSize="20sp"
            android:fontFamily="@font/sofia_pro_medium_az"
            android:textColor="@color/teal_200"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sedang Live"
            android:textSize="16sp"
            android:fontFamily="@font/sofia_pro_medium_az"
            android:textColor="@android:color/holo_red_dark"/>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_set_reminder"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:clickable="true"
            app:pressedTranslationZ="12dp"
            app:useCompatPadding="true"
            app:backgroundTint="@color/purple_500">
            <LinearLayout
                android:id="@+id/lv_reminder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/forth"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:tint="@color/teal_200"
                    android:src="@drawable/ic_baseline_power_settings_new_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Pengingat"
                    android:layout_marginLeft="10dp"
                    android:textSize="8sp"
                    android:textColor="@color/teal_200"
                    android:fontFamily="@font/sofia_pro_regular_az"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/rv_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_below="@id/iv1"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/youtube"/>
            <TextView
                android:layout_toRightOf="@id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siaran langsung kajian"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:tint="@android:color/black"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_below="@id/iv2"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_person_outline_24"
                android:tint="@android:color/black"/>
            <TextView
                android:layout_toRightOf="@id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{kajian.pemateri}"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_below="@id/iv8"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv8"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:tint="@android:color/black"/>
            <TextView
                android:layout_toRightOf="@id/iv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{tanggal}"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_below="@id/iv4"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_access_time_24"
                android:tint="@android:color/black"/>
            <TextView
                android:layout_toRightOf="@id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{jam}"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_below="@id/iv5"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_note_24"
                android:tint="@android:color/black"/>
            <TextView
                android:layout_toRightOf="@id/iv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{kajian.catatan}"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_below="@id/iv6"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_local_offer_24"
                android:tint="@android:color/black"/>
            <TextView
                android:layout_toRightOf="@id/iv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{kajian.namaKategori}"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>


    </LinearLayout>
</layout>